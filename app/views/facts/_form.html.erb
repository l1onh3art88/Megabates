<%= form_for [@facts.build], remote: true do |f| %>
	<% if fact.errors.any? %>
		<div class="alert alert-danger">
		    <h4>There are <%= pluralize(fact.errors.count, "error") %>.</h4>
				<ul>
			        <% fact.errors.full_messages.each do |msg| %>
			          <li><%= msg %></li>
			        <% end %>
		      	</ul>
		</div>
	<% end %>
	<%= form_group_tag(fact.errors[:opinion]) do %>
	<div class= "form-group"
		<%= f.label :opinion %>
		<%= f.text_area :opinion, rows: 3, cols: 20, class: 'form-control', placeholder: "Enter your fact" %>
	</div>
	<% end %>
	<%= form_group_tag(fact.errors[:citation]) do %>
	<div class= "form-group"
		<%= f.label :citation %>
		<%= f.text_field :citation, class: 'form-control', placeholder: "Cite your fact with a URL if available" %>
	</div>
	<% end %>
	<div class = "form-group">
		<%= f.submit "Submit", class: 'btn btn-success' %>
	</div>
<% end %>



