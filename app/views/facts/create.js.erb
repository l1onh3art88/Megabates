<% if @fact.valid? %>
	$('#js-facts').prepend("<%= escape_javascript(render(@fact)) %> ");
	$('#new-fact').html("<%= escape_javascript(render partial: 'facts/form', locals: { topic: @topic, fact: @fact}) %>");
<% else %>
	$('#new-fact').html("<%= escape_javascript(render partial: 'facts/form', locals: { topic: @topic, fact: @fact}) %>");
<% end %>
